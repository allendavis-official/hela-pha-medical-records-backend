# Create .gitignore in root
cat > .gitignore << 'EOF'
# Dependencies
node_modules/
frontend/node_modules/

# Environment variables
.env
.env.local
.env.production

# Logs
logs/
*.log
npm-debug.log*

# Build outputs
dist/
build/
.next/
frontend/.next/
frontend/out/

# Database
*.db
*.sqlite

# OS files
.DS_Store
Thumbs.db

# IDE
.vscode/
.idea/
*.swp
*.swo

# Uploads
uploads/
temp/

# Prisma
prisma/migrations/*/migration.sql
EOF